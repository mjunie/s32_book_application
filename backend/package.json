{
  "name": "books-api-otel-jaeger",
  "version": "1.0.0",
  "description": "Books API with OpenTelemetry tracing exported to Jaeger",
  "main": "app.ts",
  "type": "commonjs",
  "scripts": {
    "start": "npx tsx --import ./instrumentation.ts app.ts",
    "dev": "npx tsx watch --import ./instrumentation.ts app.ts",
    "build": "tsc",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test:health": "curl http://localhost:8080/health",
    "test:create": "curl -X POST http://localhost:8080/books -H 'Content-Type: application/json' -d '{\"title\":\"Test Book\",\"author\":\"Test Author\",\"genre\":\"Test\",\"year_published\":2024,\"available_copies\":1}'",
    "test:all": "curl http://localhost:8080/books",
    "jaeger:open": "open http://localhost:16686"
  },
  "keywords": [
    "opentelemetry",
    "express",
    "postgresql",
    "tracing",
    "jaeger",
    "otlp"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.48.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-metrics": "^1.25.1",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/sdk-trace-node": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@types/winston": "^2.4.4",
    "jest": "^30.2.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3"
  }
}
